<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Mô tả -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We've just sent you a 4 digits code to your phone number"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <!-- Hàng các trường nhập OTP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <EditText
            android:id="@+id/etOtpDigit1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/otp_edit_text_background"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etOtpDigit2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/otp_edit_text_background"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etOtpDigit3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/otp_edit_text_background"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etOtpDigit4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/otp_edit_text_background"/>
    </LinearLayout>

    <!-- Nút Continue -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:background="@color/custom_color"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <!-- TextView Resend Code -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAlignment="center">

        <TextView
            android:id="@+id/tvDidNotReceiveCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn’t receive the code?"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tvResendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend Code"
            android:textSize="14sp"
            android:textColor="#0000FF"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

</LinearLayout>
