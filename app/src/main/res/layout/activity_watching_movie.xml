<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_marginBottom="40px"/>

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/exoplayer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            app:controller_layout_id="@layout/exo_playback_control_view"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách các tập phim"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexbox_button_container"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:flexbox="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            flexbox:alignItems="stretch"
            flexbox:flexDirection="row"
            flexbox:flexWrap="wrap"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            >


        </com.google.android.flexbox.FlexboxLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a3a3e"
            android:layout_margin="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên phim"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả phim"
            android:textColor="#9494a1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a3a3e"
            android:layout_margin="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diễn viên"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dan hsach1 siễn viên"
            android:textColor="#9494a1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a3a3e"
            android:layout_margin="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thể loại"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách các thể loại"
            android:textColor="#9494a1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            />
    </LinearLayout>
</ScrollView>