<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35sp"
        android:layout_marginStart="15sp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stream "
        android:layout_centerInParent="true"
        android:textColor="@color/orText"
        android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Everywhere"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="174dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            android:elevation="1dp"
            >
        <ImageView
            android:id="@+id/slug_movie_home"
            android:layout_width="330dp"
            android:layout_height="174dp"
            android:src="@drawable/imgtest"
            android:background="@drawable/rounded_corner"
            android:scaleType="centerCrop"
            android:contentDescription="@string/action_user"
            />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="65dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_transparent_blur"
            android:orientation="horizontal"
            android:elevation="2dp"
            >

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/play"
                android:scaleType="fitCenter"
                android:background="@drawable/icon_background"
                app:tint="@color/Item_checked"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:contentDescription="Enter"
                android:padding="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Continue Watching"
                    android:textColor="#bcbcbc"
                    android:paddingTop="15dp"
                    android:textSize="14dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Ready Player One"
                    android:textColor="@color/white"
                   android:textSize="18dp"

                    />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trending"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="15sp"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingStart="38dp"
        android:paddingEnd="38dp"
        android:overScrollMode="never"
        android:layout_marginTop="10dp"/>
</LinearLayout>